{
  "cli": {
    "version": ">= 12.0.0"
  },
  "build": {
    "base": {
      "node": "22.15.0"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_APP_MODE": "pilot",
        "EXPO_PUBLIC_USE_EMULATORS": "false"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "EXPO_PUBLIC_APP_MODE": "prod",
        "EXPO_PUBLIC_USE_EMULATORS": "false"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
